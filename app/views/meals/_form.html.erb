<%= form_for(@meal) do |f| %>
  <% if @meal.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @meal.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  タイトル
  <%= f.text_field :title, class: "form-control title-field" %>
  内容
  <%= f.text_area :content, class: "form-control content-field" %>
  <%= f.submit "保存する", class: "btn primary-btn" %>
<% end %>
